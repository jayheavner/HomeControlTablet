{
  "root": true,
  "env": {
    "browser": true,
    "node": true,
    "commonjs": true
  },
  "extends": [
    "plugin:vue/recommended",
    "eslint:recommended",
    "plugin:prettier/recommended",
    "prettier/vue"
  ],
  "parserOptions": {
    "parser": "babel-eslint",
    "ecmaVersion": 6
  },
  "rules": {
    "prettier/prettier": ["error", { "singleQuote": true }],
    "no-console": "off",
    "no-debugger": "error",
    "indent": ["error", 2, {
      "SwitchCase": 1
    }],
    "linebreak-style": [
      "warn",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "vue/max-attributes-per-line": ["error", {
      "singleline": 5,
      "multiline": {
        "max": 1,
        "allowFirstLine": false
      }
    }]
  }
}